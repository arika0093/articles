---
import dayjs from "dayjs";
import utc from "dayjs/plugin/utc";
import timezone from "dayjs/plugin/timezone";
import { Icon } from "astro-icon/components";
import { SITE } from "@/config";

dayjs.extend(utc);
dayjs.extend(timezone);

type Props = {
  class?: string;
  size?: "sm" | "lg";
  pubDatetime: string | Date;
  timezone?: string;
  modDatetime?: string | Date | null;
};

const {
  pubDatetime,
  modDatetime: _modDatetime,
  size = "sm",
  class: className = "",
  timezone: postTimezone,
} = Astro.props;

/* ========== Formatted Datetime ========== */
// const isModified = modDatetime && modDatetime > pubDatetime;

var tz = postTimezone || SITE.timezone;
const pubDt = dayjs(pubDatetime).tz(tz);
// const modDt = dayjs(modDatetime).tz(tz);

const date = pubDt.format("YYYY/MM/DD");
---

<div class:list={["flex items-center gap-x-2 opacity-70", className]}>
  <Icon
    name="tabler:calendar"
    class:list={[
      "inline-block size-5 min-w-5.5",
      { "scale-90": size === "sm" },
    ]}
  />
  <time
    class:list={["text-sm me-2", { "sm:text-base": size === "lg" }]}
    datetime={pubDt.toISOString()}>{date}</time
  >
